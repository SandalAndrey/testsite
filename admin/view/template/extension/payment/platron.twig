{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-platron" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid"> 
    {% if error_warning %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-platron" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_payment_name }}*</label>
            <div class="col-sm-10">
              <input type="text" name="payment_platron_payment_name" value="{{ payment_platron_payment_name }}" class="form-control" />
              {% if error_payment_name %}
                <div class="text-danger">{{ error_payment_name }}</div>
              {% endif %}
            </div>			  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_merchant_id }}*</label>
            <div class="col-sm-10">
              <input type="text" name="payment_platron_merchant_id" value="{{ payment_platron_merchant_id }}" class="form-control" />
              {% if error_merchant_id %}
                <div class="text-danger">{{ error_merchant_id }}</div>
              {% endif %}
            </div>			  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_secret_word }}*</label>
            <div class="col-sm-10">
              <input type="text" name="payment_platron_secret_word" value="{{ payment_platron_secret_word }}" class="form-control" />
              {% if error_secret_word %}
                <div class="text-danger">{{ error_secret_word }}</div>
              {% endif %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Result URL:</label>
            <div class="col-sm-10">
              {{ copy_result_url }}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Success URL:</label>
            <div class="col-sm-10">
              {{ copy_success_url }}
            </div>			  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">Fail URL:</label>
            <div class="col-sm-10">
              {{ copy_fail_url }}
            </div>			  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_test }}</label>
            <div class="col-sm-10">
              <select name="payment_platron_test" id="input-order-status" class="form-control">
                {% if payment_platron_test == 1 %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>				  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ text_lifetime_tooltip }}">{{ entry_lifetime }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_platron_lifetime" value="{{ payment_platron_lifetime }}" class="form-control" />
            </div>			  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_order_status }}</label>
            <div class="col-sm-10">
              <select name="payment_platron_order_status_id" id="input-order-status" class="form-control">
				{% for order_status in order_statuses %}
                {% if order_status.order_status_id == payment_platron_order_status_id %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
			  </select>
            </div>				  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_order_status_fail }}</label>
            <div class="col-sm-10">
              <select name="payment_platron_order_status_id_fail" id="input-order-status_fail" class="form-control">
                {% for order_status in order_statuses_fail %}
                {% if order_status.order_status_id == payment_platron_order_status_id_fail %}
                <option value="{{ order_status.order_status_id }}" selected="selected">{{ order_status.name }}</option>
                {% else %}
                <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                {% endif %}
                {% endfor %}
                </select>
            </div>				  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="payment_platron_status" id="input-order-status" class="form-control">
                {% if payment_platron_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>				  
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_sort_order }}</label>
            <div class="col-sm-10">
              <input type="text" name="payment_platron_sort_order" value="{{ payment_platron_sort_order }}"  class="form-control" />			  
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_ofd_send_receipt }}</label>
            <div class="col-sm-10">
              <select name="payment_platron_ofd_send_receipt" id="input-ofd-send-receipt" class="form-control">
                {% if payment_platron_ofd_send_receipt %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>          
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">{{ entry_ofd_vat }}</label>
            <div class="col-sm-10">
              <select name="payment_platron_ofd_vat" id="input-ofd-vat" class="form-control">
                {% for vat_key, vat_label in ofd_vat_types %}
                {% if vat_key == payment_platron_ofd_vat %}
                <option value="{{ vat_key }}" selected="selected">{{ vat_label }}</option>
                {% else %}
                <option value="{{ vat_key }}">{{ vat_label }}</option>
                {% endif %}
                {% endfor %}
              </select>
            </div>          
          </div>

          </div>
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}